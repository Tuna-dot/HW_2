<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tw_lgn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Войти"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tw_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выполните вход"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:layout_marginTop="14dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/text_greetings"
        app:layout_constraintStart_toStartOf="@+id/text_greetings"
        app:layout_constraintEnd_toEndOf="@+id/text_greetings"

        />

    <TextView
        android:id="@+id/tw_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="или зарегестрируйтесь."
        android:textSize="22sp"
        android:textColor="@color/white"
        android:layout_marginTop="6dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/tw_sign_in"
        app:layout_constraintStart_toStartOf="@+id/tw_sign_in"
        app:layout_constraintEnd_toEndOf="@+id/tw_sign_in"

        />



    <LinearLayout
        android:id="@+id/layout"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tw_registration"
        app:layout_constraintStart_toStartOf="@+id/tw_registration"
        app:layout_constraintEnd_toEndOf="@+id/tw_registration"

        >

    <EditText
        android:layout_marginHorizontal="4dp"
        android:id="@+id/edit_text_email"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Введите вашу почту"
        android:background="@color/white"
        />

    <EditText
        android:layout_marginHorizontal="4dp"
        android:id="@+id/edit_text_password"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Введите ваш пароль"
        android:layout_marginVertical="10dp"
        android:background="@color/white"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginHorizontal="4dp"
        android:id="@+id/button_Login"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="ВОЙТИ"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_button"
        android:textStyle="bold"
        />

    </LinearLayout>




    <TextView
        android:id="@+id/tw_fg_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Забыли пароль?"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/layout"
        app:layout_constraintStart_toStartOf="@id/layout"
        app:layout_constraintEnd_toEndOf="@id/layout"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нажмите здесь"
        android:textSize="16sp"
        android:textColor="@color/brown"
        app:layout_constraintTop_toBottomOf="@+id/layout"
        app:layout_constraintStart_toEndOf="@id/tw_fg_password"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.1"
        />


</androidx.constraintlayout.widget.ConstraintLayout>


